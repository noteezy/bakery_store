<!DOCTYPE html>
<html lang="en">
<head>
<% include head_include %>
</head>
<body>
<%- include(header) %>

<div class="container products">

  <% for(var i = 0; i < products.length; i++) { %>
     <div id="btn_delete_product_<%= products[i]['id'] %>" class="row product-single">
       <div class="col-3 product-single-img">
         <img src="../photos/cake_product.png" alt="">
       </div>
       <div class="col-5 product-single-text">
         <p><%= products[i]['title'] %></p>
         <p><%= products[i]['price'] %> $</p>
       </div>
       <div class="col-2 product-single-discount">
         <button class="product-add-discount">Add Discount</button>
       </div>
       <div class="col-2 product-single-delete">
         <button onclick="delete_from_basket(<%= products[i]['id'] %>)" class="product-delete">Delete</button>
       </div>
     </div>
  <%  } %>

  <nav>
    <ul class="pagination">
      <li class="page-item
        <%if (parseInt(pageId)==0) { %>
            disabled
        <% } %>
        "><a class="page-link" href="/products/<%= parseInt(pageId)-1 %>">Previous</a></li>
  <% for(var i = 0; i < cnt; i++) { %>
        <li class = "page-item
        <%if (parseInt(i)==(pageId)) { %>
            active
        <% } %>
        ">
          <a class="page-link" href="/products/<%= i %>"><%= i+1 %></a>
        </li>
  <%  } %>
    <li class="page-item
    <%if (parseInt(pageId)==(cnt-1)) { %>
        disabled
    <% } %>
    "><a class="page-link" href="/products/<%= parseInt(pageId)+1 %>">Next</a></li>
  </ul>
  </nav>


</div>
<script>


function delete_from_basket(product_id)
{
  $("#btn_delete_product_"+product_id).remove();
    $.ajax({
    url:"/product-delete",
    method:"POST",
    data:{
      product_id: product_id,
    },
    success:function(response) {
    },
   error:function(){
    alert("error");
   }
  });
}

</script>


  <script src="https://code.jquery.com/jquery-3.3.1.min.js" ></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
  <!-- <script src="./js/main.js"></script> -->
</body>
</html>
